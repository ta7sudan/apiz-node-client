{
  "name": "apiz-node-client",
  "version": "3.0.1",
  "description": "Node client for apiz",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf dist types",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --config .prettierrc.js --write src/**/*.{js,ts}",
    "inspect": "jsinspect src",
    "prepare": "npm run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ta7sudan/apiz-node-client.git"
  },
  "keywords": [
    "Node",
    "client",
    "apiz"
  ],
  "author": "ta7sudan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ta7sudan/apiz-node-client/issues"
  },
  "files": [
    "src",
    "dist",
    "example",
    "types"
  ],
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint"
      ],
      "*.ts": [
        "tslint"
      ]
    },
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add ."
    }
  },
  "homepage": "https://github.com/ta7sudan/apiz-node-client#readme",
  "devDependencies": {
    "apiz-ng": "^4.0.0",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.3",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jsinspect": "^0.12.7",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/got": "^9.6.4",
    "got": "^9.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
